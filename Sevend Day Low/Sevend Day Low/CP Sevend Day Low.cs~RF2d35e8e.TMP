using System;
using System.Linq;
using cAlgo.API;
using cAlgo.API.Indicators;
using cAlgo.API.Internals;
using cAlgo.Indicators;

namespace cAlgo.Robots
{
    [Robot(TimeZone = TimeZones.UTC, AccessRights = AccessRights.None)]
    public class CPSevendDayLow : Robot
    {



        private ExponentialMovingAverage ema;

        protected override void OnStart()
        {
            this.ema = Indicators.ExponentialMovingAverage(Bars.ClosePrices, 200);
        }

        protected override void OnBar()
        {
            var emaValue = this.ema.Result.Last(1);
            var isSevenDayLow = this.isSevenDayLow(Bars.Last(1).Close);
            var position = Positions.Find("test");
            if (position != null)
                return;
            if (isSevenDayLow && Ask > emaValue && position == null)
            {
                ExecuteMarketOrder(TradeType.Buy, SymbolName, 1000, "test", 10, 15);
            }

        }

        protected override void OnStop()
        {
            // Put your deinitialization logic here
        }


        private bool isSevenDayLow(double currentClose)
        {
            var returnVal = true;
            for (int i = 2; i <= 6; i++)
            {
                if (currentClose >= Bars.Last(i).Close)
                {
                    return false;
                }
            }
            return returnVal;
        }
    }
}
